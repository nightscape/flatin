# Fastlane configuration for Android
# Documentation: https://docs.fastlane.tools/getting-started/android/setup/

default_platform(:android)

# Get the project root directory (two levels up from fastlane directory)
project_root = File.expand_path(File.join(File.dirname(__FILE__), "..", ".."))

platform :android do
  desc "Build the Android release APK"
  lane :build do
    sh("cd #{project_root} && flutter build apk --release")
  end

  desc "Build the Android App Bundle (AAB) for Play Store"
  lane :build_bundle do
    sh("cd #{project_root} && flutter build appbundle --release")
  end

  desc "Run integration tests and collect screenshots"
  lane :screenshots do
    # Clean previous screenshots
    sh("rm -rf #{project_root}/fastlane/screenshots")
    sh("mkdir -p #{project_root}/fastlane/screenshots")

    # Build the app for testing
    sh("cd #{project_root} && flutter build apk --debug")

    # Run integration tests
    # Note: This requires a connected device or emulator
    sh("cd #{project_root} && flutter test integration_test/integration_test.dart --reporter expanded")

    # Copy screenshots from test output to fastlane directory
    # Integration test screenshots are saved in test_driver/screenshots by default
    # We'll copy them to fastlane/screenshots for Fastlane to use
    screenshots_source = "#{project_root}/test_driver/screenshots"
    if Dir.exist?(screenshots_source)
      sh("cp -r #{screenshots_source}/* #{project_root}/fastlane/screenshots/ 2>/dev/null || true")
    end

    # Also check for screenshots in integration_test directory
    integration_screenshots = "#{project_root}/integration_test/screenshots"
    if Dir.exist?(integration_screenshots)
      sh("cp -r #{integration_screenshots}/* #{project_root}/fastlane/screenshots/ 2>/dev/null || true")
    end

    UI.success("Screenshots collected in fastlane/screenshots")
  end

  desc "Run Cucumber tests and collect screenshots"
  lane :cucumber_tests do
    # Clean previous screenshots
    sh("rm -rf #{project_root}/fastlane/screenshots")
    sh("mkdir -p #{project_root}/fastlane/screenshots")

    # Build the app for testing
    sh("cd #{project_root} && flutter build apk --debug")

    # Run Cucumber/Gherkin tests
    # Note: This requires flutter_gherkin to be properly set up
    sh("cd #{project_root} && flutter test integration_test/test_driver/app_test.dart --reporter expanded")

    # Copy screenshots
    screenshots_source = "#{project_root}/test_driver/screenshots"
    if Dir.exist?(screenshots_source)
      sh("cp -r #{screenshots_source}/* #{project_root}/fastlane/screenshots/ 2>/dev/null || true")
    end

    UI.success("Cucumber tests completed. Screenshots collected in fastlane/screenshots")
  end

  desc "Upload to Google Play Store Internal Testing"
  lane :internal do
    build_bundle
    upload_to_play_store(
      track: "internal",
      aab: "#{project_root}/build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: false,  # Upload metadata (title, descriptions)
      skip_upload_images: false,     # Upload images (icon, feature graphic)
      skip_upload_screenshots: false # Upload screenshots
    )
  end

  desc "Upload to Google Play Store Alpha"
  lane :alpha do
    build_bundle
    upload_to_play_store(
      track: "alpha",
      aab: "#{project_root}/build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: false,  # Upload metadata (title, descriptions)
      skip_upload_images: false,     # Upload images (icon, feature graphic)
      skip_upload_screenshots: false # Upload screenshots
    )
  end

  desc "Upload to Google Play Store Beta"
  lane :beta do
    build_bundle
    upload_to_play_store(
      track: "beta",
      aab: "#{project_root}/build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: false,  # Upload metadata (title, descriptions)
      skip_upload_images: false,     # Upload images (icon, feature graphic)
      skip_upload_screenshots: false # Upload screenshots
    )
  end

  desc "Upload to Google Play Store Production"
  lane :release do
    build_bundle
    upload_to_play_store(
      track: "production",
      aab: "#{project_root}/build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: false,  # Upload metadata (title, descriptions)
      skip_upload_images: false,     # Upload images (icon, feature graphic)
      skip_upload_screenshots: false # Upload screenshots
    )
  end
end

